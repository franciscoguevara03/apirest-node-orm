generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  name       String
  lastname   String
  username   String   @unique
  email      String   @unique
  roles      Roles    @relation(fields: [rolesId], references: [id])
  rolesId    Int
  status     Boolean
  created_at DateTime @default(now())
}

model Roles {
  id       Int    @id @default(autoincrement())
  rol_name String
  user     User[]
}
